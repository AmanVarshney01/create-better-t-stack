{
	"name": "create-better-t-stack",
	"version": "1.6.0",
	"description": "A modern CLI tool for scaffolding end-to-end type-safe TypeScript projects with best practices and customizable configurations",
	"type": "module",
	"license": "MIT",
	"bin": {
		"create-better-t-stack": "dist/index.js"
	},
	"files": [
		"dist",
		"template"
	],
	"keywords": [
		"typescript",
		"scaffold",
		"generator",
		"boilerplate",
		"starter",
		"cli",
		"create-app",
		"t3-stack",
		"turborepo",
		"trpc",
		"monorepo",
		"fullstack",
		"type-safety",
		"react",
		"react-native",
		"expo",
		"hono",
		"elysia",
		"drizzle",
		"prisma",
		"tanstack",
		"tailwind",
		"shadcn",
		"pwa",
		"tauri",
		"biome"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/better-t-stack/create-better-t-stack.git",
		"directory": "apps/cli"
	},
	"homepage": "https://better-t-stack.pages.dev/",
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"check-types": "tsc --noEmit",
		"check": "biome check --write .",
		"test": "vitest run",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"@clack/prompts": "^0.10.0",
		"commander": "^13.1.0",
		"execa": "^8.0.1",
		"fs-extra": "^11.3.0",
		"gradient-string": "^3.0.0",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.17.19",
		"tsup": "^8.4.0",
		"typescript": "^5.7.3"
	}
}
