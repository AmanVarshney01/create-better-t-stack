{
  "name": "@better-t-stack/template-generator",
  "version": "0.0.1",
  "description": "Virtual file system generator for Better-T-Stack templates - works in browsers and Node.js",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./fs-writer": {
      "types": "./dist/fs-writer.d.ts",
      "import": "./dist/fs-writer.js"
    },
    "./template-reader": {
      "types": "./dist/template-reader.d.ts",
      "import": "./dist/template-reader.js"
    }
  },
  "scripts": {
    "generate-templates": "tsx scripts/generate-templates.ts",
    "prebuild": "bun run generate-templates",
    "build": "tsup src/index.ts src/fs-writer.ts src/template-reader.ts --format esm --dts",
    "dev": "tsup src/index.ts src/fs-writer.ts src/template-reader.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@better-t-stack/types": "workspace:*",
    "handlebars": "^4.7.8",
    "memfs": "^4.51.1",
    "pathe": "^2.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "fs-extra": "^11.3.3",
    "is-binary-path": "^3.0.0",
    "tinyglobby": "^0.2.15",
    "tsup": "^8.3.5",
    "tsx": "^4.19.0",
    "typescript": "^5.7.2"
  }
}
