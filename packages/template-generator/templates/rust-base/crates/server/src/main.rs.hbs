#[derive(Clone)]
pub struct AppState {
    pub db: Arc<DatabaseConnection>,
}

async fn health(
    axum::extract::State(state): axum::extract::State<AppState>,
) -> Json<HealthResponse> {
    let db_status = if state.db.ping().await.is_ok() {
        "connected"
    } else {
        "disconnected"
    };
    Json(HealthResponse {
        status: "ok",
        message: "Server is running",
        database: db_status,
    })
}
