name: {{projectName}}

services:
  redis:
    image: redis:alpine
    container_name: {{projectName}}-redis
    command: redis-server --appendonly yes
    ports:
      - "6379:6379"
    volumes:
      - {{projectName}}_redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped

volumes:
  {{projectName}}_redis_data:
