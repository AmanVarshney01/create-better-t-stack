{
	"name": "better-t-stack",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:cli": "turbo run dev --filter=create-better-t-stack",
		"cli": "cd apps/cli && node dist/cli.js",
		"dev:web": "turbo run dev --filter=web",
		"build:web": "turbo run build --filter=web",
		"build:cli": "turbo run build --filter=create-better-t-stack",
		"lint": "turbo lint",
		"check": "oxfmt . && oxlint .",
		"prepare": "lefthook install",
		"release": "bun run scripts/release.ts",
		"bump": "bun run scripts/bump-version.ts",
		"canary": "bun run scripts/canary-release.ts",
		"cleanup-previews": "bun run scripts/cleanup-previews.ts",
		"deploy:convex": "turbo run --filter=@better-t-stack/backend deploy",
		"deploy:web": "bun run --filter=web deploy",
		"generate": "bun run --filter=web generate-schema",
		"deploy": "bun run deploy:web"
	},
	"devDependencies": {
		"@types/bun": "^1.3.1",
		"changelogithub": "^13.16.1",
		"lefthook": "^1.7.9",
		"lint-staged": "^16.2.6",
		"oxfmt": "^0.16.0",
		"oxlint": "^1.31.0",
		"turbo": "^2.6.1",
		"typescript": "5.9.3"
	},
	"lint-staged": {
		"*": [
			"bun check"
		]
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "bun@1.3.4",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"dependencies": {
		"@clack/prompts": "^0.11.0"
	}
}